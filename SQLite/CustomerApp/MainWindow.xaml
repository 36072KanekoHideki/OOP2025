<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp"
        mc:Ignorable="d"
        Title="顧客管理アプリケーション" Height="300" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10">
            <StackPanel>

                <Grid Grid.IsSharedSizeScope="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <!-- 住所用の行を追加 -->
                    </Grid.RowDefinitions>

                    <!-- 名前 -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition SharedSizeGroup="LabelGroup"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="名前" VerticalAlignment="Center" Grid.Column="0" Margin="0,0,5,0"/>
                        <TextBox x:Name="NameTextBox" Grid.Column="1"/>
                    </Grid>

                    <!-- 電話番号 -->
                    <Grid Grid.Row="1" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition SharedSizeGroup="LabelGroup"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="電話番号" VerticalAlignment="Center" Grid.Column="0" Margin="0,0,5,0"/>
                        <TextBox x:Name="PhoneTextBox" Grid.Column="1"/>
                    </Grid>

                    <!-- 住所 -->
                    <Grid Grid.Row="2" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition SharedSizeGroup="LabelGroup"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="住所" VerticalAlignment="Center" Grid.Column="0" Margin="0,0,5,0"/>
                        <TextBox x:Name="AddressTextBox" Grid.Column="1"/>
                    </Grid>
                </Grid>

            </StackPanel>
            <StackPanel>
                <Button Content="保存" x:Name="SaveButton" Margin="0,10,0,10" Height="30" Click="SaveButton_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
                    <Button Content="削除" x:Name="DeleteButton" Margin="0,0,0,5" Click="DeleteButton_Click"/>
                    <Button Content="更新" x:Name="UpdateButton" Margin="0,0,0,0" Width="100" Click="UpdateButton_Click"/>
                </StackPanel>
                <Button Content="画像" x:Name="Picture" Margin="5,0,0,0" Width="65"/>
            </StackPanel>
        </StackPanel>
        <Grid Grid.Column="2">
            <StackPanel Margin="10">
                <TextBox x:Name="SerchTextBox" Margin="0,5,0,0" FontSize="20"/>
                <ListView x:Name="CustomerListView" Margin="0,5,0,0" Height="600">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding id}"/>
                                <TextBlock Text="{Binding Name}" FontSize="20"/>
                                <TextBlock Text="{Binding Phone}" Foreground="Blue"/>
                                <TextBlock Text="{Binding Address}" Foreground="ForestGreen"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

