<Window x:Class="TenkiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TenkiApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200" WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- シンプルビュー -->
        <Grid x:Name="SimpleView" Opacity="0">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image x:Name="WeatherIcon" Width="96" Height="96" HorizontalAlignment="Center"/>
                <TextBlock x:Name="TemperatureText" Text="-- ℃" FontSize="48" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock x:Name="CityText" Text="東京" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- 詳細ビュー -->
        <Grid x:Name="DetailView" Opacity="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>

            <!-- 上部：都市名と検索 -->
            <TextBlock x:Name="CityTextDetail" Text="東京" FontSize="28" FontWeight="Bold" Foreground="White"
                       HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,10,0,0" Grid.Row="0"/>
            <TextBlock x:Name="DateText" Text="取得時刻：" FontSize="16" Foreground="White"
                       HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,50,0,0" Grid.Row="0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top"
                        Margin="20,20,20,0" Grid.Row="0">
                <ComboBox x:Name="BackgroundSelector" Width="120" SelectionChanged="BackgroundSelector_SelectionChanged">
                    <ComboBoxItem Content="朝"/>
                    <ComboBoxItem Content="昼"/>
                    <ComboBoxItem Content="夕方"/>
                    <ComboBoxItem Content="夜"/>
                </ComboBox>
                <TextBox x:Name="SearchBox" Width="150" Margin="10,0,0,0" VerticalAlignment="Center" ToolTip="都道府県を入力してください"/>
                <Button Content="検索" Click="SearchButton_Click" Margin="5,0,0,0"/>
            </StackPanel>

            <!-- 中央部分 -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="210"/>
                    <ColumnDefinition Width="210"/>
                    <ColumnDefinition Width="320"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 天気パネル -->
                <Border Background="#22FFFFFF" CornerRadius="12" Padding="15" Margin="0,0,10,0" Grid.Column="0">
                    <Border Background="#AAFFFFFF" CornerRadius="12" Padding="10">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="天気" FontSize="20" Foreground="Black" HorizontalAlignment="Center"/>
                            <Image x:Name="WeatherIconDetail" Width="64" Height="64" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="DescriptionText" Text="風速: -- m/s, 湿度: -- %" FontSize="16" Foreground="Black" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Border>

                <!-- 気温パネル -->
                <Border Background="#22FFFFFF" CornerRadius="12" Padding="15" Margin="10,0,20,10" Grid.Column="1"
                        Width="200" Height="200" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Border Background="#AAFFFFFF" CornerRadius="12" Padding="10">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="気温" FontSize="20" Foreground="Black" HorizontalAlignment="Center"/>
                            <Image Source="pack://application:,,,/Images/thermometer.png"
                                   Width="32" Height="32" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                            <TextBlock x:Name="TemperatureTextDetail" Text="-- ℃"
                                       FontSize="28" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Border>

                <!-- 風速パネル -->
                <Border Background="#22FFFFFF" CornerRadius="12" Padding="15" Margin="10,220,20,0" Grid.Column="1"
                        Width="200" Height="200" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Border Background="#AAFFFFFF" CornerRadius="12" Padding="10">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="風速" FontSize="20" Foreground="Black" HorizontalAlignment="Center"/>
                            <Image Source="pack://application:,,,/Images/wind.png"
                                   Width="32" Height="32" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                            <TextBlock x:Name="WindSpeedTextDetail" Text="-- m/s"
                                       FontSize="28" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Border>

                <!-- 週間予報パネル -->
                <Border Background="#22FFFFFF" CornerRadius="12" Padding="15" Margin="0,0,20,0"
                        HorizontalAlignment="Stretch" VerticalAlignment="Top"
                        Height="400" Grid.Column="2">
                    <Border Background="#AAFFFFFF" CornerRadius="12" Padding="10">
                        <StackPanel Orientation="Vertical" x:Name="WeeklyForecastPanelVertical"/>
                    </Border>
                </Border>

                <!-- 日本列島画像パネル -->
                <Border Background="#22FFFFFF" CornerRadius="12" Padding="15" Grid.Column="3">
                    <Border Background="#AAFFFFFF" CornerRadius="12" Padding="10">
                        <Image x:Name="JapanMapImage"
                               Source="pack://application:,,,/Images/japan.png"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>
                </Border>
            </Grid>

            <!-- 下段：時間予報 -->
            <Border Background="#22FFFFFF" CornerRadius="12" Padding="10" Margin="20"
                    HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                    Grid.Row="2" Height="150">
                <Border Background="#AAFFFFFF" CornerRadius="12" Padding="10">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <StackPanel Orientation="Horizontal" x:Name="HourlyForecastPanel"/>
                    </ScrollViewer>
                </Border>
            </Border>
        </Grid>
    </Grid>
</Window>
